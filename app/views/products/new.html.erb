<h1>Enter a New Product:</h1>
<%= form_tag '/products', method: :post do %>
  <div class = "form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, nil, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, nil, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, nil, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= label_tag :supplier_id %>
    <%= text_field_tag :supplier_id, nil, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Create', class: "btn btn-default" %>
  </div>
  <% end %>
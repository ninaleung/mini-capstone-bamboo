<h1>Add an image to a product:</h1>
<%= form_tag '/images', method: :post do %>
  <div class = "form-group">
    <%= label_tag :url %>
    <%= text_field_tag :url, nil, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= label_tag :product_id %>
    <%= text_field_tag :product_id, nil, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Add image', class: "btn btn-default" %>
  </div>
  <% end %>